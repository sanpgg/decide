  function ready() {

    if("<%= @address_user.latitude %>" == "0.0" && "<%= @address_user.longitude %>" == "0.0")
    {
      document.getElementById('remove-marker-link-new_map_location').click();
      // alert('DOM is ready');
    }
  }
</script>
