<div class="sidebar-divider"></div>
<h2 class="sidebar-title">Sectores</h2>
<br>

<ul id="sectors" class="no-bullet categories <%= current_budget.id %>">
  <li class="inline-block">
    <a href="/presupuestos/<%=current_budget.id %>/investments?heading_id=">Todo el municipio</a>
  </li>
  <% if @sectors.present? %>
    <% @sectors.each do |sector| %>
      <li class="inline-block">
        <%= link_to sector['name'],
                    budget_investments_path(@budget, heading_id: sector),
                    { class: (params[:heading_id] == sector['id'].to_s) ? 'is-active' : '' } %>
      </li>
    <% end %>
  <% end %>
</ul>
